<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="3dp"
                        ></corners>
                    <padding
                        android:left="3dp"
                        android:right="3dp"
                        ></padding>
                    <stroke
                        android:width="2dp"
                        android:color="@color/Gray"
                        ></stroke>
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@mipmap/arrow_down"
                    ></bitmap>
            </item>
        </layer-list>
    </item>
</selector>